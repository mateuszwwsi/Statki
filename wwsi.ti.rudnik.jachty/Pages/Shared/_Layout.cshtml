<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - wwsi.ti.rudnik.jachty</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Wypożyczalnia Jachtów Rudnik Company</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" href="@Url.Page("./Index")">Strona główna</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Page("./ORudnik")">O nas</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Page("./Jachty")">Nasze Jachty</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Page("./Kontakt")">Kontakt</a></li>
                        <li><img src="/grafika/facebook.png" alt="Image" class="img-fluid" style="width: 30px; height: 30px;">&nbsp;</li>
                        <li><img src="/grafika/instagram.png" alt="Image" class="img-fluid" style="width: 30px; height: 30px;">&nbsp;</li>
                        <li><img src="/grafika/twitter.png" alt="Image" class="img-fluid" style="width: 30px; height: 30px;">&nbsp;</li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" >
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - wwsi.ti.rudnik.jachty - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
